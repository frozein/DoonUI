{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/I${workspaceFolder}\\..\\dependencies\\include", //options
				"/I${workspaceFolder}\\..\\dependencies\\include\\FreeType", //needed bc freetype doesnt work if not in some root folder or something
				"/Fo${workspaceFolder}\\..\\bin\\",
				"/Fd${workspaceFolder}\\..\\bin\\",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/std:c++17",
				"/Fe:",
				"${workspaceFolder}\\..\\bin\\doonui_x64.exe",

				"/Tc${workspaceFolder}\\glad.c",
				"/Tc${workspaceFolder}\\DoonUI\\math\\vector.c",
				"/Tc${workspaceFolder}\\DoonUI\\math\\matrix.c",
				"/Tc${workspaceFolder}\\DoonUI\\math\\quaternion.c",
				"/Tc${workspaceFolder}\\DoonUI\\render.c",
				"/Tp${workspaceFolder}\\DoonUI\\element.cpp",

				"${workspaceFolder}\\*.cpp", //source files

				"${workspaceFolder}\\..\\dependencies\\lib\\glfw3.lib",
				"${workspaceFolder}\\..\\dependencies\\lib\\glfw3_mt.lib",
				"${workspaceFolder}\\..\\dependencies\\lib\\glfw3dll.lib",
				"${workspaceFolder}\\..\\dependencies\\lib\\freetype.lib",
				"opengl32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}